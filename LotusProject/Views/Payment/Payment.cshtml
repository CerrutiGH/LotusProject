    <meta name="viewport" content="width=device-width" />
    <title>Payment</title>
</head>

<body class="d-flex justify-content-center">

    <nav class="navbar navbar-light fluid fixed-top">
        <a href="~/Home/InitialPage"><img src="~/static/Images/LogoForBlue.png" height="50" width="50"></a>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;


        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <a class="nav-link" style="color: white" href="@Url.Action( "Home", "Home")">Voltar ao início</a>
            </li>
        </ul>


    </nav>
    <div class="d-flex justify-content-center" style="width: 100%; height: 100%;  padding: 0px 0px; background-color: #2A435B; margin-top: 0">
        <div class="ui form segment" style=" max-width: 70%; height: 70%; padding: 0px 0px; background-color: #2A435B; margin-top: 0; border: none; box-shadow: none; z-index: 1">
            <div class="row" style="padding-left: 20px; padding-right: 20px; padding-top: 40px; margin-right: 0; margin-bottom: 0; margin-top: 15px">
                <div class="field col-10">
                    <label style="color: white">Número do cartão</label>
                    <input placeholder="Número do cartão de crédito" name="cartnumber" type="text">
                </div>

                <div class="field col-2">
                    <label style="color: white">CVV</label>
                    <input placeholder="Código de segurança" name="cvv" type="text">

                </div>


                <div class="field">
                    <label style="color: white">Nome Completo</label>
                    <input placeholder="Nome que se encontra atrás do cartão" name="cartname" type="text">
                </div>

                <div class="field">
                    <label style="color: white">Validade</label>
                    <input name="Validity" type="date">
                </div>
            </div>
            <div style="bottom:0; position:absolute; width: 100%">
                <div class="row" style="margin-left: 20px; margin-right: 20px; ">
                   
                    <a href="@Url.Action("FinishPaymentReserve", "Payment", new { id = Request.Url.Segments.Last() })" class = "ui inverted violet button"> Finalizar </a> 
                    
                   

                   

                </div>



            </div>

        </div>
