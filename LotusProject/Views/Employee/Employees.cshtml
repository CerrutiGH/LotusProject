@model List<LotusProject.Models.ViewModels.ViewEmployee>
@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.0/semantic.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.0/semantic.min.js"></script>
    <link rel="stylesheet" href="~/static/css/">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/static/css/styleLayoutAdm.css">
</head>

<div class="card text-center" style="background-color: #233240;">
    <div class="card-header">
        Featured
    </div>
    <div class="card-body">
        <h1 class="card-title" style="color: white">Gerenciamento de Funcionários</h1>
        <a href="~/Employee/SignUpEmp" class="btn btn-success">Adicionar funcionário</a>
    </div>
    <div class="card-footer text-muted">
        @DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Day
    </div>
</div>

<div class="row" style="padding-top: 10px; padding-left: 10px; padding-right: 10px">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-3" style="padding-top: 10px; ">
                <div class="ui card" style="background-color: #233240; border-color: #2A435B; height: 170px">

                    <div class="content">
                        <a class="header" style="color: white">@item.name</a>
                        <div class="meta">
                            <span class="date" style="color: white">@item.login</span>
                        </div>
                        <div class="description" style="color: white">
                            @item.role
                        </div>
                    </div>
                    <div class="extra content">
                        @Html.ActionLink("Detalhes", "DetailsEmp", "Employee", new { id = item.login }, new { @class = "ui teal button", @style="height: 30px; font-size: 12px;" })
                        <button class="" ></button>

                    </div>
                </div>
            </div>
            
        }


    </div>

</div>

